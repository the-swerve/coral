<!doctype html>

<html>

<head>
  <title>coral payments</title>
	<link rel="stylesheet" media="screen,projection" href="/css/bootstrap.css">
	<link rel="stylesheet" media="screen,projection" href="/css/bootstrap-responsive.css">
	<link rel="stylesheet" media="screen,projection" href="/css/style.css">
	<script type="text/javascript" src="https://www.google.com/jsapi"></script>
	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript" src="/js/jquery.cookie.js"></script>
	<script type="text/javascript" src="/js/app.js"></script>
	<script type="text/javascript" src="/js/share.js"></script>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

<div id="share" class="container drop-shadow" style="padding:2em; margin-top:1em;">

	<% if @profile_user %>
		<h1><%= @profile_user.name %>'s Subscriptions</h1>

	<% if @profile_user.subscriptions.empty? %>
		<p><em>No subscriptions yet.</em></p>
	<% else %>
		<table class="table table-striped">
			<thead>
				<tr> <th>Name</th> <th>Description</th> <th></th></tr>
			</thead>
			<tbody>
			<% @profile_user.subscriptions.each do |sub| %>
				<tr>
					<td><%= sub.plan.name %></td>
				</tr>
			<% end %>
			</tbody>
	</table>
	<% end %>

	<% else %>
		<p>Person not found</p>
	<% end %>

	<a class='btn' href="/logout">Logout</a>

</div>

</body>
</html>
