<!doctype html>

<html>

<head>
  <title>coral payments</title>
	<link rel="stylesheet" media="screen,projection" href="/css/bootstrap.css">
	<link rel="stylesheet" media="screen,projection" href="/css/bootstrap-responsive.css">
	<link rel="stylesheet" media="screen,projection" href="/css/style.css">
	<link rel="stylesheet" media="screen,projection" href="/css/public.css">
	<script type="text/javascript" src="https://www.google.com/jsapi"></script>
	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript" src="/js/jquery.cookie.js"></script>
	<script type="text/javascript" src="/js/app.js"></script>
	<script type="text/javascript" src="/js/share.js"></script>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

	<ul id='profile-actions'>
		<li><a href='#' class='btn'><i class='icon-wrench'></i> Settings</a></li>
		<li><a class='btn' href="/logout"><i class='icon-off'></i> Logout</a></li>
	</ul>

	<div id='profile' class='drop-shadow'>
		<h2><%= @profile_user.name %></h2>
	</div>

	<div class='subscriptions'>

		<table class="table table-striped">
			<thead>
				<tr> <th></th></tr>
			</thead>
			<tbody>
			<% @profile_user.subscriptions.each do |sub| %>
				<tr>
					<td><%= sub.plan.name %></td>
					<td>
						<strong>$<%= sub.plan.amount %></strong>
						every <strong><%= sub.plan.cycle_str %></strong>
						<% if sub.plan.initial_charge > 0 %>
							with an initial charge of <strong>$<%= sub.plan.initial_charge %> </strong>
						<% end %>
					</td>
					<td><a class="btn btn-danger" href="#"><i class="icon-remove icon-white"></i> Unsubscribe</a></td>
				</tr>
			<% end %>
			</tbody>
		</table>

	</div>

	<div class='new-sub drop-shadow'>
		<td><a class='btn' href='#'><i class='icon-plus'></i> New recurring payment</a></td>
	</div>


	<table id='payment-method-table' class='table table-striped hide'>
		<thead> <th></th> </thead>
		<tbody>
			<% @profile_user.payment_methods.each do |p| %>
				<tr>
					<td><%= p.name %></td>
				</tr>
			<% end %>
			<tr>
				<td>
					<a id='new-payment-method-button' class='btn'><i class='icon-plus'></i> New payment method</a>
				</td>
			</tr>
		<tr> </tr>
		</tbody>

	</table>


	<div id='footer'></div>

</body>
</html>
