<div id="plans-meta"> <!-- plan meta template goes here --> </div>

<script id='plan-meta-tmpl' class='hide' type='text/template'>

	<ul id="plan-nav" class="nav nav-pills">
		<li class="dropdown">
			<a rel="tooltip" title="Select a plan" class="dropdown-toggle auto-tooltip-top" data-toggle="dropdown" href="">
				<i class="icon-chevron-down"></i>
				[[ if(selected) { ]]
					<strong> <span id="dropdown-active" data-id="selected.id">selected.get('name')</span> </strong>
				[[ } else { [[
					<strong> <span id="dropdown-active" data-id="">Everyone</span> </strong>
				[[ } ]]
			</a>
			<ul class="dropdown-menu">
				[[ if(selected) { ]]
					<li><a class="dropdown-item" href="#" id='all-plans-select'>Everyone</a></li>
				[[ } ]]
				[[ _.each(plans, function(plan) { ]]
					<li><a id="{{plan.id}}" class="dropdown-item" href="#">{{ plan.get('name') }}</a></li>
				[[ }) ]]
			<li><a href="#" id="new-plan-button">Create a plan</a></li>
			</ul>
		</li>
		[[ if(selected) { ]]
			<li><a href="#" id='edit-plan-button' class='plan-actions auto-tooltip-top' title='Edit Plan'><i class="icon-pencil"></i></a></li>
			<li><a href="#" class='share-plan-button auto-tooltip-top' title='Share'><i class="icon-globe"></i></a></li>
		[[ } ]]
		<a style="float:right;" id="new-plan-button" class='btn btn-info' href=""><i class="icon-plus icon-white"></i> New Plan</a>
	</ul>

<p class="plan-desc"><!-- plan-desc-tmpl goes here -->
	[[ if(selected) { ]]
		Charging <strong>${{Number(plan.get('amount')).toFixed(2)}}</strong>
		every <strong>{{plan.get('cycle')}}</strong>
		[[if(selected.get('initial_charge') != 0) { ]]
			with an initial charge of <strong>${{Number(plan.get('initial_charge')).toFixed(2)}}</strong>
		[[ } ]]
	[[ } ]]
</p>

</script>

