<script id='plan-nav-tmpl' type='text/template' class='hide'>
	<ul id="plan-nav" class="nav nav-pills">
	[[ if(_.size(plans) == 0 && selected) { ]]
		<li><a><strong>{{ selected.get('name') }}</strong></a></li>
	[[ } else if(_.size(plans) > 0 && selected) { ]]
				<li class="dropdown">
					<a title="Select a plan" class="dropdown-toggle" data-toggle="dropdown" href="#">
						<i class="icon-chevron-down"></i> <strong id="dropdown-active"> {{selected.get('name')}} </strong>
					</a>
					<ul class="dropdown-menu">
			[[ _.each(plans, function(plan) { ]]
				<li><a data-id="{{ plan.id }}" class="dropdown-item" href="#">{{ plan.get('name') }}</a></li>
			[[ }) ]]
				</ul>
			</li>
	[[ } ]]
	<li style='padding-left:1em'><a href="#" id='edit-plan-button' class='btn plan-actions auto-tooltip-top' title='Edit Plan'><i class="icon-pencil"></i> Edit</a></li>
	<li style='padding-left:1em'><a href="#" class='btn plan-actions share-plan-button auto-tooltip-top' title='Share Plan'><i class="icon-globe"></i> Share</a></li>
	<a style="float:right;" id="new-plan-button" class='btn btn-info' href=""><i class="icon-plus icon-white"></i> New Plan</a>
	</ul>
</script>

<script id='plan-desc-tmpl' type='text/template' class='hide'>
	Charging <strong>${{Number(plan.get('amount')).toFixed(2)}}</strong> every <strong>{{plan.get('cycle')}}</strong>
	[[if(plan.get('initial_charge') != 0) { ]]
		with an initial charge of <strong>${{Number(plan.get('initial_charge')).toFixed(2)}}</strong>
	[[ } ]]
</script>

<div id='plan-nav'><!-- plan-nav-tmpl --> </div>

<p id='plan-desc'><!-- plan-desc-tmpl --></p>
