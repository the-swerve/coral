<!doctype html>

<html>

<head>
  <title>coral payments</title>
	<link rel="stylesheet" media="screen,projection" href="/css/bootstrap.css">
	<link rel="stylesheet" media="screen,projection" href="/css/bootstrap-responsive.css">
	<link rel="stylesheet" media="screen,projection" href="/css/style.css">
	<link rel="stylesheet" media="screen,projection" href="/css/dashboard.css">
	<link rel="stylesheet" media="screen,projection" href="/css/share.css">
	<script type="text/javascript" src="https://www.google.com/jsapi"></script>
	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript" src="/js/jquery.cookie.js"></script>
	<script type="text/javascript" src="/js/app.js"></script>
	<script type="text/javascript" src="/js/share.js"></script>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

<div class="container">

	<div id='share-desc' class='drop-shadow'>

		<% if @plan %>
			<h1><%= @plan.account.name %></h1>
			<h2><%= @plan.name %></h2>
			<p><strong>$<%= "%.2f" % @plan.amount
				%></strong> every <strong><%= @plan.cycle_length if @plan.cycle_length != 1%> <%= @plan.cycle_type
				%></strong> 
				<% if @plan.initial_charge > 0 %>
					and an initial charge of <strong>$<%= "%.2f" % @plan.initial_charge %></strong></p>
				<% end %>

		<div id='share-signup' class='hide'>
			<input id="account-id" type="hidden" value="<%= @plan.account.id %>" />
			<p id='share-plan-error'></p>
			<form method="post" class="" id="share-signup-form">

				<label></label>
				<input type="text" name="name" placeholder="Name" />

				<label></label>
				<input type="text" name="email" placeholder="Email" />

				<label></label>
				<input type="password" name="password" placeholder="Password" />

				<input type="hidden" name="sub_plan_id" value="<%= @plan.id %>" />

				<select class='new-payment-method-type' name='pay_type'>
					<option label='Payment Method'></option>
					<option id='new-credit-card'>Credit Card</option>
					<option id='new-echeck'>E-check</option>
				</select>
				<div class='credit-card-selected hide'>
					<label>Card Number</label>
					<input id="" type="text" name="cc_number" value=""/>
					<label>Expiration</label>
					<input id="" type="text" name="expiration" value=""/>
				</div>
				<div class='echeck-selected hide'>
					<label>Account Number</label>
					<input id="" type="text" name="acct_number" value=""/>
				</div>

				<div class="share-form-actions">
					<input class="btn" id="share-signup-submit" name="commit" type="submit" value="Sign Up" />
				</div>
			</form>

			<% elsif @acct %>
				<p><%= @acct.name %></p>
			<% end %>
		</div>

	</div>

	<a href='#' id='signup-title' class='btn'>Sign Up</a>



</div>

<div id='share-footer'>
	<a class='logo'></a>
</div>


</body>
</html>
