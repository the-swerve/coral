<script id='edit-account-form-tmpl' type='text/template' class='hide'>
	<div class="tabbable">
		<ul class="nav nav-tabs">
			<h3 style="float:left;padding-right:1em;">Account Settings</h3>
			<li class="active auto-tooltip" title="Edit info"><a href="#account-info" data-toggle="tab"><i class="icon-user"></i> Your Info</a></li>
			<li><a href="#account-money" data-toggle="tab"><i class="icon-lock"></i> Your Money</a></li>
			<li><a href="#account-sharing" data-toggle="tab"><i class="icon-globe"></i> Sharing</a></li>
			<button type="button" class="close" data-dismiss="modal" style="float:right">x</button>
		</ul>

	<div class="tab-content">
		<div class="tab-pane active" id="account-info">
			<p id="edit-account-error"></p>
			<form method="post" action="/account/update" id="edit-account-form" class="form-horizontal">
				<div class="control-group">
					<label class="control-label">Account Name</label>
					<div class="controls"><input type="text" name="name" value="{{name}}" /></div>
				</div>

				<div class="control-group">
					<label class="control-label">Email Address</label>
					<div class="controls"><input type="text" name="email" value="{{email}}" /></div>
				</div>

				<div class="control-group">
					<label class="control-label">Phone Number</label>
					<div class="controls"><input type="text" name="phone" value="" /></div>
				</div>

				<div class="control-group">
					<label class="control-label">Address</label>
					<div class="controls"><input type="text" name="address" value="" /></div>
				</div>

				<div style="border-top:1px solid #DDD; padding-top: 1em; margin-top: 1em;">
					<input class="btn" id="edit-account-submit" name="commit" type="submit" value="Save" />
				</div>
			</form>
		</div>

		<div class="tab-pane" id="account-money">
			<div class="well">
				<p>In escrow: ${{escrow_total}}</p>
				<p>Total received: ${{paidout_total}}</p>
				<p><a href="#" class="btn btn-success">Pay out</a></p>
			</div>
			[[ if(bank_name == 'none') { ]]
			<form method="post" id="new-bank-account-form" class="form-horizontal">

				<div class="control-group"> <label class="control-label">Bank Name</label>
					<div class="controls"> <input type="text" name="name" /></div>
				</div>

				<div class="control-group"> <label class="control-label">Account Number</label>
					<div class="controls"> <input type="text" name="number" placeholder="Any number" /> </div>
				</div>

				<div style="border-top:1px solid #DDD; padding-top: 1em; margin-top: 1em;">
					<input class="btn" id="new-bank-account-submit" name="commit" type="submit" value="Save" />
				</div>
			</form>
			[[ } else { ]]
				<p>Connected bank account: {{bank_name}}</p>
			[[ } ]]
		</div>
		<div class="tab-pane" id="account-sharing">
			<p>Sharing your account: add custom colors and a banner to your public
			page, get code to embed a list of your plans on your own site.</p>
		</div>
	</div>
</div>

</script>
