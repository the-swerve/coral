<script id='charge-form-tmpl' type='text/template' class='hide'>
		<p id="charge-error"></p>
		<p><strong>Person:</strong> {{profile}}</p>
		<p><strong>Status:</strong> {{state}} </p>
		[[ if(plan_name) { ]]
			<p><strong>Towards:</strong> {{plan_name}}</p>
		[[ } ]]
		<input id="charge-id" type="hidden" value="{{id}}" />
		<form method="post" action="/charges" id="charge-form">
			<label>Charge Label</label>
			<input id="charge-name" type="text" name="name" value="{{name}}"/> 
			<label>Amount</label>
			<div class="input-prepend">
				<span class="add-on">$</span>
				<input id="charge-amount" type="text" name="amount" style="width:4em;" value="{{amount}}" /> 
			</div>
			<label>Pay Date</label>
			<input id="charge-due-date" type="date" name="due_date" value="{{due_date}}" /> 
		</form>
		[[ if(state == 'Unpaid') { ]]
			<a href="#" id="pay-charge" class="btn btn-success">Pay Now</a>
			<a href="#" id="void-charge" class="btn btn-warning">Cancel Charge</a>
		[[ } else if(state == 'Paid') {]]
			<h4>Transactions</h4>
			<table id="transaction-table" class="table table-striped">
				<thead>
					<tr><th>Date</th><th>Action</th><th>Amount</th><th>Successful?</th><th>Message</th></tr>
				</thead>
				<tbody>
					[[ _.each(transactions, function(t) { ]]
						<tr>
							<td>{{t.date}}</td>
							<td>{{t.action}}</td>
							<td>${{Number(t.amount).toFixed(2)}}</td>
							<td>{{t.successful}}</td>
							<td>{{t.message}}</td>
						</tr>
					[[ }); ]]
				</tbody>
			</table>

			<a href="#" id="void-charge" class="btn btn-danger">Void Payment</a>
		[[ } ]]
</script>
