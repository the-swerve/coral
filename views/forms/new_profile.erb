
<script id='new-profile-tmpl' type='text/template' class='hide'>
	<tr id='new-profile-form'>
		<td>
			<form id='new-profile-form' class='form-inline' style='margin:0'>
				<input type='text' name='name' placeholder='Name' style='width:12em;margin:0;' />
				<input type='text' name='email' placeholder='Email' style='width:12em;margin: 0 1em 0 1em;' />
				<input type='hidden' name='sub_plan_id' class='sub-plan-id' val='none' />
				<img class='loader hide' src='img/ajax-loader.gif' />
				<button type='submit' id='new-profile-row' class='btn'>Save</button>
				<a class='btn' id='remove-profile-row' href='#'>Cancel </a>
				<span class='form-error'></span>
			</form>
		</td>
	</tr>
</script>


<p id="new-profile-error" class='form-error'></p>
<form method="post" action="/profiles" id="wat-profile-form" class='form-horizontal'>
	<div class='control-group'>
		<label class='control-label'>Name</label>
		<div class='controls'><input type="text" name="name" /></div>
	</div>
	<div class='control-group'>
		<label class='control-label'>Email</label>
		<div class='controls'><input type="text" name="email" /></div>
	</div>

	<div class='control-group'>
		<label class='control-label'></label>
		<div class='controls'>
			<select class='new-payment-method-type' name='pm_pay_type'>
				<option label='Payment Method'></option>
				<option id='new-credit-card'>Credit Card</option>
				<option id='new-echeck'>E-check</option>
			</select>
		</div>
	</div>

	<div class='credit-card-selected hide'>
		<div class='control-group'>
			<label class='control-label'>Card Number</label>
			<div class='controls'>
				<input id="" type="text" name='pm_cc_number' value=''/>
			</div>
		</div>
		<div class='control-group'>
			<label class='control-label'>Expiration</label>
			<div class='controls'>
				<input id="" type="text" name='' value=""/>
			</div>
		</div>
	</div>

	<div class='echeck-selected control-group hide'>
		<label class='control-label'>Account Number</label>
		<div class='controls'>
			<input id="" type="text" name="pm_acct_number" value=""/>
		</div>
	</div>

	<div id='new-profile-sub'> </div>

	<div class='modal-form-actions'>
		<input id="new-profile-submit" class="btn" name="commit" type="submit" value="Save" />
	</div>
</form>

<script id='new-profile-sub-tmpl' type='text/template' class='hide'>
<div class='control-group'>
	<div class='controls'>
		<select id='new-sub-selector' name='sub_plan_id'>
			[[ if(selected) { ]]
				<option label="{{ selected.get('name') }}">{{ selected.id }}</option>
			[[ } else { ]]
				<option label="Subscription"></option>
			[[ } ]]
			[[ _.each(plans, function(p) { ]]
				<option label='{{p.get('name')}}'>{{p.id}}</option>
			[[ }); ]]
		</select>
	</div>
</div>
<div id='new-sub-dates' class={{ selected ? '' : 'hide'}}>
	<div class='control-group'>
		<label class='control-label'>Starting on</label>
		<div class='controls'>
			<input type="date" name='sub_starting' />
		</div>
	</div>
	<div class='control-group'>
		<label class='control-label'>Ending on</label>
		<div class='controls'>
			<input type="date" name='sub_expiration' />
		</div>
	</div>
</div>
</script>

